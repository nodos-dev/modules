namespace nos.mediaio;

enum ColorSpace : uint {
    REC709  = 0,
    REC601  = 1,
    REC2020 = 2,
}

enum GammaCurve : uint {
    REC709  = 0,
    HLG  = 1,
    ST2084 = 2,
}

